.mask 
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.9);
  z-index: 100;

.tip-dialog
  z-index 200
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  display: flex
  justify-content: center
  align-items: center
  .bg1
    width 580px
    height 313px
    background-size contain
    background-repeat: no-repeat
    background-image url('../../assets/images/dialog/da_ka_1.png')
  .bg2
    width 580px
    height 690px
    background-size contain
    background-repeat: no-repeat
    background-image url('../../assets/images/dialog/da_ka_info.png')
  .bg3
    position relative
    width 580px
    height 948px
    background-size contain
    background-repeat: no-repeat
    background-image url('../../assets/images/dialog/rule.png')
  .bg4
    width 580px
    height 473px
    background-size contain
    background-repeat: no-repeat
    background-image url('../../assets/images/dialog/da_ka_finish.png')
  .content
    background-repeat no-repeat
    background-size contain
    color #fff
    z-index 100
    display flex
    justify-content center
    .tip
      margin-top: 200px;
      font-size 28px
      color: #000

  .content-bg2
    position relative
    z-index 100
    display flex
    flex-direction: column
    align-items: center
    .signIn
      color #082833
      font-size: 36px
    .noSignIn
      color #082833
      font-size: 36px
      opacity .7

.box-1, .box-2, .box-3 
  display flex
  justify-content: space-between
  width 500px
  height 80px
  .img
    width: 65px
    height : 65px

.box-1
  position absolute
  top: 180px;

.box-2
  position absolute
  top: 310px;

.box-3
  position absolute
  top: 440px;

.word-1
  position absolute
  top 320px
  left 60px
  font-size 28px
  color: #000
  width 458px

.word-2
  position absolute
  top 620px
  left 60px
  font-size 28px
  color: #000
  width 480px



.btn
  position absolute
  bottom 70px
  left 90px
  width 400px
  height 80px
  background: #011e35
  text-align: center
  color #ffffff
  font-size: 28px
  line-height: 80px


.layout
  display flex
  flex-direction: column
  align-items: center
  margin-top: 200px;

.line-1
  height 80px
  color: #082833
  font-size: 36px;
  line-height: 80px

.line-2, .line-3
  height 60px
  color: #082833
  font-size: 26px;
  line-height: 60px


.footer
  position absolute
  left -100px
  bottom: -130px
  .btn
    width: 600px
    height 80px