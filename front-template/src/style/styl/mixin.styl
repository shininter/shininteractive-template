no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap
      
img-bg($url)
  background-repeat: no-repeat
  background-size: 100% 100%
  background-image: url($url)
  overflow: hidden

.container
  width: 100%;
  height: 100%;
  position: absolute;

.pb40
  padding-bottom 40px

.page
  position absolute
  overflow  hidden

body
  background #000

#app
  position absolute
  overflow  hidden
  width: 750px;
  height: 100%

[v-cloak]
  display: none !important

.sprite-enter-active, .sprite-leave-active
  transition  all .3s

.sprite-enter, .sprite-leave-to
  opacity  0

.page-enter-active, .page-leave-active
  transition  all .5s
.page-enter, .page-leave-to
  transform translate(0,500px)
  opacity  0